            border-radius: var(--border-radius);
            cursor: pointer;
            font-size: 16px;
            font-weight: 500;
            transition: all 0.3s ease;
            text-decoration: none;
        }

        .btn:hover {
            background-color: #3a5bd9;
        }

        .btn-success {
            background-color: var(--success-color);
        }

