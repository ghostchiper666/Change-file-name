        }

        .btn-warning {
            background-color: var(--warning-color);
        }

        .btn-warning:hover {
            background-color: #d97706;
        }

        .file-list {
            max-height: 400px;
            overflow-y: auto;
        }

        .file-item {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 15px;
            border-bottom: 1px solid var(--light-color);
            cursor: move;
            transition: all 0.3s ease;
        }

        .file-item:last-child {
            border-bottom: none;
        }

        .file-item.dragging {
            opacity: 0.5;
        }

